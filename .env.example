# Medical Text Classification API - Environment Configuration

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Secret Key (REQUIRED for production)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-jwt-key-here

# JWT Token Expiration (minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Key Authentication
REQUIRE_API_KEY=false
API_KEYS=api-key-1,api-key-2,api-key-3

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
ALLOWED_HOSTS=localhost,127.0.0.1

# Security Headers
ENABLE_SECURITY_HEADERS=true

# Input Validation
MAX_TEXT_LENGTH=5000
MIN_TEXT_LENGTH=1

# Request Logging
LOG_REQUESTS=true
LOG_SENSITIVE_DATA=false

# =============================================================================
# DATABASE CONFIGURATION (Optional)
# =============================================================================

# PostgreSQL Database
DATABASE_URL=postgresql://meduser:medpass123@localhost:5432/medical_db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=meduser
POSTGRES_PASSWORD=medpass123
POSTGRES_DB=medical_db

# =============================================================================
# MINIO CONFIGURATION (Object Storage)
# =============================================================================

MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET=medical-models
MINIO_SECURE=false

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false
LOG_LEVEL=INFO

# Model Configuration
MODEL_PATH=models/model.pt
TOKENIZER_PATH=models/
MAX_SEQUENCE_LENGTH=512

# Testing Configuration
TESTING=0
TEST_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/test_medical_text_db

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# Prometheus Metrics
PROMETHEUS_PORT=8001
METRICS_ENABLED=true

# =============================================================================
# PRODUCTION DEPLOYMENT
# =============================================================================

# Environment
ENVIRONMENT=development

# SSL/TLS Configuration
SSL_ENABLED=false

# Example Production Settings:
# REQUIRE_API_KEY=true
# RATE_LIMIT_REQUESTS=50
# ALLOWED_ORIGINS=https://yourdomain.com
# DEBUG=false
# LOG_LEVEL=WARNING
# ENVIRONMENT=production