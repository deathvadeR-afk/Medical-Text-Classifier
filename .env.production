# Production Environment Configuration
# Medical Text Classification API

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO
PYTHONPATH=/app

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=medtext_prod
POSTGRES_USER=medtext_user
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT Secret Key - MUST be changed in production
SECRET_KEY=CHANGE_ME_SUPER_SECRET_JWT_KEY_HERE_64_CHARS_MINIMUM

# API Key Authentication
REQUIRE_API_KEY=true
API_KEYS=prod-api-key-1,prod-api-key-2,prod-api-key-3

# Rate Limiting
RATE_LIMIT_REQUESTS=50
RATE_LIMIT_WINDOW=3600

# CORS Configuration
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
ALLOWED_HOSTS=yourdomain.com,api.yourdomain.com,www.yourdomain.com

# Security Headers
ENABLE_SECURITY_HEADERS=true

# Input Validation
MAX_TEXT_LENGTH=5000
MIN_TEXT_LENGTH=1

# Logging
LOG_REQUESTS=true
LOG_SENSITIVE_DATA=false

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
REACT_APP_API_URL=https://api.yourdomain.com
REACT_APP_ENVIRONMENT=production

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
# Grafana
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_GRAFANA_ADMIN_PASSWORD
GRAFANA_ROOT_URL=https://monitoring.yourdomain.com

# Prometheus
PROMETHEUS_RETENTION_TIME=30d

# =============================================================================
# SSL/TLS CONFIGURATION
# =============================================================================
SSL_CERT_PATH=/etc/ssl/certs/yourdomain.com.crt
SSL_KEY_PATH=/etc/ssl/private/yourdomain.com.key

# =============================================================================
# CLOUD PROVIDER SPECIFIC SETTINGS
# =============================================================================

# AWS Settings (if deploying to AWS)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_KEY
AWS_S3_BUCKET=medtext-models-bucket

# Google Cloud Settings (if deploying to GCP)
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
GCS_BUCKET=medtext-models-bucket

# Azure Settings (if deploying to Azure)
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_RESOURCE_GROUP=medtext-rg
AZURE_STORAGE_ACCOUNT=medtextstorage

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
# API Workers
UVICORN_WORKERS=4
UVICORN_MAX_WORKERS=8

# Database Connection Pool
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30

# Model Loading
MODEL_CACHE_SIZE=1
MODEL_TIMEOUT=300

# =============================================================================
# BACKUP AND RECOVERY
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=medtext-backups

# =============================================================================
# ALERTING CONFIGURATION
# =============================================================================
# Email Alerts
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_USER=alerts@yourdomain.com
SMTP_PASSWORD=CHANGE_ME_SMTP_PASSWORD
ALERT_EMAIL_TO=admin@yourdomain.com

# Slack Alerts (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_METRICS=true
ENABLE_TRACING=true
ENABLE_PROFILING=false
ENABLE_DEBUG_ENDPOINTS=false

# =============================================================================
# RESOURCE LIMITS
# =============================================================================
MAX_REQUEST_SIZE=10MB
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30
WORKER_MEMORY_LIMIT=2GB

# =============================================================================
# COMPLIANCE AND AUDIT
# =============================================================================
AUDIT_LOGGING=true
DATA_RETENTION_DAYS=365
GDPR_COMPLIANCE=true
HIPAA_COMPLIANCE=false

# =============================================================================
# DEVELOPMENT OVERRIDES (for staging/testing)
# =============================================================================
# Uncomment for staging environment
# ENVIRONMENT=staging
# DEBUG=true
# LOG_LEVEL=DEBUG
# REQUIRE_API_KEY=false
